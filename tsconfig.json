{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["./assets/*"],
			"@components/*": ["./src/components/*"],
			"@context/*": ["./src/context/*"],
			"@constants/*": ["./src/constants/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@typeDefs/*": ["./src/types/*"],
      "@theme/*": ["src/theme/*"],
			"@utils/*": ["./src/utils/*"],
       "@state/*": ["./src/state/*"],
			"@/*": ["./*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"declarations.d.ts"
	],
	"exclude": ["node_modules/**/*", "dist", "build"]
}
